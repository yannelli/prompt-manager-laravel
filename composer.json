{
    "name": "prompt-manager/laravel-prompt-templates",
    "description": "A Laravel package for managing prompt templates with versioning, components, types, and pipeline support",
    "keywords": [
        "laravel",
        "prompt",
        "templates",
        "ai",
        "llm",
        "versioning",
        "pipeline"
    ],
    "homepage": "https://github.com/prompt-manager/laravel-prompt-templates",
    "license": "MIT",
    "authors": [
        {
            "name": "Prompt Manager",
            "email": "info@prompt-manager.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "PromptManager\\PromptTemplates\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PromptManager\\PromptTemplates\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PromptManager\\PromptTemplates\\PromptTemplatesServiceProvider"
            ],
            "aliases": {
                "PromptTemplate": "PromptManager\\PromptTemplates\\Facades\\PromptTemplate",
                "PromptPipeline": "PromptManager\\PromptTemplates\\Facades\\PromptPipeline",
                "PromptRenderer": "PromptManager\\PromptTemplates\\Facades\\PromptRenderer"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
